{
  "name": "cn.ubuntu.com",
  "description": "Website for cn.ubuntu.com",
  "scripts": {
    "test": "yarn run lint-scss && yarn run lint-python && yarn run test-python",
    "lint-python": "flake8 webapp tests && black --check --line-length 79 webapp tests",
    "lint-scss": "stylelint static/**/*.scss",
    "lint-js": "eslint static/js/src/**/*.js",
    "format-js": "prettier -w 'static/js/**/*.{js,jsx,ts,tsx}'",
    "test-python": "python3 -m unittest discover tests",
    "format-python": "python3 -m black --line-length 79 webapp tests",
    "clean": "rm -rf node_modules yarn-error.log css static/css *.log *.sqlite _site/ build/ .jekyll-metadata .bundle",
    "watch-css": "watch -p 'static/sass/**/*.scss' -c 'yarn run build'",
    "watch-js": "watch -p static/js/**/*.js -c 'webpack --env.development'",
    "serve": "./entrypoint 0.0.0.0:${PORT}",
    "build-css": "sass static/sass/styles.scss static/css/styles.css --load-path=node_modules --style=compressed --silence-deprecation=mixed-decls,import,global-builtin && postcss --no-map --use autoprefixer --replace 'static/css/**/*.css'",
    "build-js": "mkdir -p static/js && webpack",
    "build-cookie-policy": "cp node_modules/@canonical/cookie-policy/build/js/cookie-policy.js static/js/dist/",
    "build-latest-news": "cp node_modules/@canonical/latest-news/dist/latest-news.js static/js/dist/",
    "build": "mkdir -p static/js && webpack && yarn run build-css && yarn run build-cookie-policy && yarn run build-latest-news",
    "start": "yarn run build && concurrently --kill-others --raw 'yarn run watch-css' 'yarn run watch-js' 'yarn run serve'",
    "test-js": "jest --passWithNoTests",
    "format-scss": "prettier -w 'static/**/*.scss'"
  },
  "author": "Canonical webteam",
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "autoprefixer": "10.4.21",
    "babel-jest": "30.2.0",
    "babel-loader": "10.0.0",
    "concurrently": "9.2.1",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "jest": "30.2.0",
    "postcss": "8.4.31",
    "postcss-cli": "11.0.1",
    "prettier": "3.8.1",
    "sass": "1.93.2",
    "stylelint": "17.3.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard-scss": "17.0.0",
    "stylelint-order": "7.0.1",
    "stylelint-prettier": "5.0.3",
    "stylelint-scss": "7.0.0",
    "watch-cli": "0.2.3",
    "webpack": "5.94.0",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@canonical/cookie-policy": "3.8.4",
    "@canonical/global-nav": "3.7.3",
    "@canonical/latest-news": "^2.2.1",
    "vanilla-framework": "4.41.0"
  }
}
